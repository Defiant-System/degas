<MenuBar>
	<Menu name="Degas">
		<Menu name="About Degas" shell="win -a"/>
		<Menu type="divider"/>
		<Menu name="Quit Degas" shell="win -c"/>
	</Menu>
	<Menu name="File">
		<Menu name="New" click="new-file" hotkey="alt+n"/>
		<Menu name="Open&#8230;" click="open-file" hotkey="alt+o"/>
		<Menu type="divider"/>
		<Menu name="Save" click="save-file" hotkey="alt+s"/>
		<Menu name="Save as&#8230;" hotkey="alt+shift+s" click="save-file-as"/>
		<Menu type="divider"/>
		<Menu name="Close File" click="close-file"/>
	</Menu>
	<Menu name="Edit">
		<Menu name="Undo" disabled="true"/>
		<Menu name="Redo" disabled="true"/>
		<Menu type="divider"/>
		<Menu name="Cut"/>
		<Menu name="Copy"/>
		<Menu name="Paste"/>
		<Menu name="Select All"/>
	</Menu>
	<Menu name="View">
		<Menu name="Show Grid" click="show-view-grid" check-group="show-view-grid" is-checked="1"/>
		<Menu name="Show Info" click="show-view-info" check-group="show-view-info" is-checked="1"/>
		<Menu name="Show Helper" click="show-view-helper" check-group="show-view-helper" is-checked="1"/>
		<Menu type="divider"/>
		<Menu name="Add Mesh&#8230;">
			<Menu name="Box" click="add-mesh" arg="box"/>
			<Menu name="Circle" click="add-mesh" arg="circle"/>
			<Menu name="Cylinder" click="add-mesh" arg="cylinder"/>
			<Menu name="Dodecahedron" click="add-mesh" arg="dodecahedron"/>
			<Menu name="Icosahedron" click="add-mesh" arg="icosahedron"/>
			<Menu name="Lathe" click="add-mesh" arg="lathe"/>
			<Menu name="Octahedron" click="add-mesh" arg="octahedron"/>
			<Menu name="Plane" click="add-mesh" arg="plane"/>
			<Menu name="Ring" click="add-mesh" arg="ring"/>
			<Menu name="Sphere" click="add-mesh" arg="sphere"/>
			<Menu name="Sprite" click="add-mesh" arg="sprite"/>
			<Menu name="Tetrahedron" click="add-mesh" arg="tetrahedron"/>
			<Menu name="Torus" click="add-mesh" arg="torus"/>
			<Menu name="Torusknot" click="add-mesh" arg="torusknot"/>
			<Menu name="Tube" click="add-mesh" arg="tube"/>
		</Menu>
		<Menu name="Add Light&#8230;">
			<Menu name="AmbientLight" click="add-light" arg="ambientlight"/>
			<Menu name="DirectionalLight" click="add-light" arg="directionallight"/>
			<Menu name="HemisphereLight" click="add-light" arg="hemispherelight"/>
			<Menu name="PointLight" click="add-light" arg="pointlight"/>
			<Menu name="SpotLight" click="add-light" arg="spotlight"/>
		</Menu>
		<Menu name="Add Camera&#8230;">
			<Menu name="OrthographicCamera" click="add-camera" arg="orthographiccamera"/>
			<Menu name="PerspectiveCamera" click="add-camera" arg="perspectivecamera"/>
		</Menu>
		<Menu type="divider"/>
		<Menu name="Fullscreen"/>
	</Menu>
	<Menu name="Help">
		<Menu name="Help" click="open-help"/>
		<Menu type="divider"/>
		<Menu name="License"/>
	</Menu>

	<Menu for="scene-background">
		<Menu name="None" click="select-scene-bg" check-group="scene-bg" arg="reset" is-checked="1"/>
		<Menu name="Color" click="select-scene-bg" check-group="scene-bg"/>
		<Menu name="Texture" click="select-scene-bg" check-group="scene-bg"/>
		<Menu name="Equirect" click="select-scene-bg" check-group="scene-bg"/>
	</Menu>

	<Menu for="scene-environment">
		<Menu name="None" click="select-scene-env" check-group="scene-env" arg="reset" is-checked="1"/>
		<Menu name="Equirect" click="select-scene-env" check-group="scene-env"/>
		<Menu name="Model Viewer" click="select-scene-env" check-group="scene-env" arg="model-viewer"/>
	</Menu>

	<Menu for="scene-fog">
		<Menu name="None" click="select-scene-fog" check-group="scene-fog" arg="reset" is-checked="1"/>
		<Menu name="Linear" click="select-scene-fog" check-group="scene-fog"/>
		<Menu name="Exponential" click="select-scene-fog" check-group="scene-fog"/>
	</Menu>

	<Menu for="scene-tone-mapping">
		<Menu name="No" click="select-tone-mapping" check-group="tone-mapping" arg="reset" is-checked="1"/>
		<Menu name="Linear" click="select-tone-mapping" check-group="tone-mapping"/>
		<Menu name="Reinhard" click="select-tone-mapping" check-group="tone-mapping"/>
		<Menu name="Cineaon" click="select-tone-mapping" check-group="tone-mapping"/>
		<Menu name="Acesfilmic" click="select-tone-mapping" check-group="tone-mapping"/>
	</Menu>
</MenuBar>